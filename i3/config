font pango:Source Code Pro Medium 8

#set modifiers
set $mod Mod1
floating_modifier $mod

# navigation-keys
set $up k
set $down j
set $left h
set $right l

# workspace variables
#set $workspace1 "1: Chromium &#xf268;"
set $workspace1 "1: Opera &#xf26a;"
set $workspace2 "2: Coms &#xf004;"
set $workspace3 "3: Win &#xf193;"
set $workspace4 "4: Code &#xf09b;"
set $workspace5 "5: Spotify &#xf1bc;"

# colour variables
set $null #FFFFFF

set $urgent-bg #E53935
set $focus-bg #FF5557
set $unfocus-bg #1F5679
set $bar-bg #1F5679

set $text #FFFFFF
set $dim-text #B2B6B9
set $indicator #993334

# window-class		    border  background	    text	indicator
client.focused		    $null   $focus-bg	    $text	$indicator
client.focused_inactive	    $null   $unfocus-bg	    $dim-text	$unfocus-bg
client.unfocused	    $null   $unfocus-bg	    $dim-text	$unfcous-bg
client.urgent		    $null   $urgent-bg	    $text	$urgent-bg

bar {
	status_command i3blocks 
	#status_command i3status
	font pango:Source Code Pro Medium, FontAwesome 9

	position	top
	mode		dock
	modifier	$mod
	hidden_state	show
	
	colors {
		background $bar-bg
		
		#class		    border	background  text
		focused_workspace   $bar-bg	$bar-bg	    $text
		active_workspace    $bar-bg	$bar-bg	    $dim-text
		inactive_workspace  $bar-bg	$bar-bg	    $dim-text
		urgent_workspace    $urgent-bg	$urgent-bg  $text
	}
}

# lock screen
bindsym $mod+x		exec /usr/local/bin/lock

# i3-gaps settings
gaps inner 12
gaps outer 0

smart_gaps yes # only gaps if more than one container in workspace
smart_borders no_gaps # only have borders if not only container

# make some workspaces use full screen
workspace $workspace1	gaps inner 0
workspace $workspace5	gaps inner 0
workspace $workspace4	gaps inner 0

#for_window [class="Chromium"] border pixel 0

# assign applications to workspaces
assign [class="Spotify"] $workspace5
assign [instance="spotify"] $workspace5
# fix for spotify
for_window [class="Spotify"] move to workspace $workspace5

assign [class="Chromium"] $workspace1
assign [class="jetbrains-studio"] $workspace4

assign [class="Wine"] $workspace3

# enable floating terminals
for_window [instance="floating"] floating enable

# i3 settings
workspace_auto_back_and_forth yes
focus_follows_mouse no
popup_during_fullscreen smart

new_window pixel 2
new_float normal
hide_edge_borders none

# hide borders for some applications
for_window [class="chromium"] 	border pixel 0

# put workspace on specific monitor by default
#workspace $workspace1 output HDMI1
#workspace $workspace2 output HDMI1
#workspace $workspace5 output HDMI1

# switch workspace between monitors
bindsym $mod+Shift+m		move  workspace to output left

# commands
bindsym $mod+Shift+c		reload
bindsym $mod+Shift+r		restart
bindsym	$mod+Shift+e		exec i3-msg exit
bindsym $mod+Shift+q		kill

bindsym $mod+Return		exec termite
bindsym $mod+Shift+Return	exec termite -d "`xcwd`"
bindsym $mod+r			exec rofi -show run 
bindsym $mod+g			exec rofi -show google -modi "google:rofi-web-search"
bindsym $mod+b			exec rofi -show books -modi "books:rofi-literature-search"

bindsym $mod+f			fullscreen
bindsym $mod+s			split v
bindsym $mod+Shift+s		split h

# floating
bindsym $mod+t			focus mode_toggle
bindsym $mod+Shift+t		floating toggle

bindsym $mod+Shift+p		move scratchpad
bindsym $mod+p			scratchpad show

# scratchpad controls
bindsym $mod+v 			mode "resize"
bindsym $mod+m			mode "move" focus floating

# remove from scratchpad
bindsym $mod+o			floating enable; floating disable

# change focus
bindsym $mod+h			focus left
bindsym $mod+j			focus down
bindsym $mod+k			focus up
bindsym $mod+l			focus right

# move focused window
bindsym $mod+Shift+h		move left
bindsym $mod+Shift+j		move down
bindsym $mod+Shift+k		move up
bindsym $mod+Shift+l		move right

# volume control
bindcode 121 exec amixer -D pulse sset Master toggle
bindcode 122 exec amixer -D pulse sset Master 1%-
bindcode 123 exec amixer -D pulse sset Master 1%+

# enable volume controls when mod is pressed
bindcode $mod+121 exec amixer -D pulse sset Master toggle
bindcode $mod+122 exec amixer -D pulse sset Master 1%-
bindcode $mod+123 exec amixer -D pulse sset Master 1%+

# screen brightness
bindcode 232 exec xbacklight -dec 10
bindcode 233 exec xbacklight -inc 10
bindcode $mod+232 exec xbacklight -dec 10
bindcode $mod+233 exec xbacklight -inc 10

# saving printscreens in ~/media/pictures/screenshots
bindcode 107 exec scrot $(xdg-user-dir PICTURES)/screenshots/%Y-%m-%d-%T.png 
bindcode $mod+107 exec scrot $(xdg-user-dir PICTURES)/screenshots/%Y-%m-%d-%T.png

# spotify controls
bindsym $mod+section mode "spotify"

# switching workspace
bindsym $mod+1			workspace $workspace1
bindsym $mod+2			workspace $workspace2
bindsym $mod+3			workspace $workspace3
bindsym $mod+4			workspace $workspace4
bindsym $mod+5			workspace $workspace5

# move containers between workspaces
bindsym $mod+Shift+1		move container to workspace $workspace1
bindsym $mod+Shift+2		move container to workspace $workspace2
bindsym $mod+Shift+3		move container to workspace $workspace3
bindsym $mod+Shift+4		move container to workspace $workspace4
bindsym $mod+Shift+5		move container to workspace $workspace5


mode "spotify" {
    bindsym section		exec playerctl -p spotify play-pause
    bindsym s			exec playerctl -p spotify stop
    bindsym n			exec playerctl -p spotify next
    bindsym p			exec playerctl -p spotify previous

    bindsym Return		mode "default"
    bindsym Escape		mode "default"
}


# move floating windows with keys
mode "move" {
    bindsym h			move left
    bindsym j			move down
    bindsym k			move up
    bindsym l			move right

    # use Return/Escape to go back to normal
    bindsym Return		mode "default"
    bindsym Escape		mode "default"
}

# resize window
mode "resize" {
    bindsym h			resize shrink	width	10 px or 10 ppt
    bindsym j			resize shrink	height	10 px or 10 ppt
    bindsym k			resize grow	height	10 px or 10 ppt
    bindsym l			resize grow	width	10 px or 10 ppt

    # use Return/Escape to go back to normal
    bindsym Return		mode "default"
    bindsym Escape		mode "default"
}

# autostart
exec dunst 
exec compton --config $HOME/.config/compton.conf -b
exec xautolock -time 5 -locker /usr/local/bin/lock -detectsleep
