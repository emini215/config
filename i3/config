# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Source Code Pro Medium 8

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up k
set $down j
set $left h
set $right l

# workspace variables
set $workspace1 "1: Opera &#xf26a;"
set $workspace2 "2: Chat &#xf000;"
set $workspace3 "3: Win &#xf193;"
set $workspace4 "4: Code &#xf09b;"
set $workspace5 "5: Spotify &#xf1bc;"

#blue #1f5679
#white #c2c6c9

# colour variables
set $bg-color #000000
set $active-bg-color #1F5679
set $inactive-bg-color #C2C6C9
set $text-color #FFFFFF
set $inactive-text-color #676E7D
set $urgent-bg-color #E53935
set $indicator #993334
#set $indicator #3A618F

# window colors
#			border		    background		text			indicator
client.focused          $active-bg-color    $inactive-bg-color	$text-color		$indicator
client.unfocused        $inactive-bg-color  $active-bg-color	$inactive-text-color	$active-bg-color
client.focused_inactive $inactive-bg-color  $active-bg-color	$inactive-text-color	$active-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color	$text-color		$urgent-bg-color

# place i3status at the top of the screen when $mod is pressed
bar {
	#status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
	status_command i3blocks
	font pango:Source Code Pro Semibold, FontAwesome 9
	position	top

	mode		dock
	modifier	$mod
	colors {
		background $active-bg-color
	    	separator $inactive-bg-color
		#                  border	    background		text
		focused_workspace  $active-bg-color        $active-bg-color		$text-color
		inactive_workspace $active-bg-color	    $active-bg-color		$inactive-bg-color
		urgent_workspace   $urgent-bg-color $urgent-bg-color	$text-color
	}
}

set $mod Mod1
floating_modifier $mod

exec dunst
exec compton --config $HOME/.config/compton.conf -b
#exec plank -n dock

exec hangouts
exec irc

# screen locker
bindsym $mod+x		exec /usr/local/bin/lock
exec xautolock -time 10 -locker /usr/local/bin/lock -detectsleep

# i3-gaps settings
gaps inner 12
gaps outer 0

# make some workspaces use full screen
workspace $workspace1	gaps inner 0
workspace $workspace5	gaps inner 0

# assign applications to workspaces
assign [class="spotify"]    $workspace5
assign [class="Opera"]	    $workspace1

assign [instance="coms"]    $workspace2
assign [class="TeamSpeak 3"] $workspace2
# enable floating terminals
for_window [instance="floating"] floating enable
for_window [class="electron"] floating enable

# show stuff underplank
#for_window [class="plank"] floating enable
#for_window [instance ="plank"] floating enable

# i3 settings
workspace_auto_back_and_forth yes
focus_follows_mouse no
popup_during_fullscreen smart

new_window pixel 2
new_float normal
hide_edge_borders none

# hide borders for some applications
for_window [class="chromium"] 	border pixel 0
for_window [class="Slack"]	border pixel 0
for_window [class="Spotify"]	border pixel 0
#for_window [class="Opera"]	border pixel 0

# commands
bindsym $mod+Shift+c		reload
bindsym $mod+Shift+r		restart
bindsym	$mod+Shift+e		exec i3-msg exit
bindsym $mod+Shift+q		kill

bindsym $mod+Return		exec termite
bindsym $mod+Shift+Return	exec termite -d "`xcwd`"

# rofi shortcuts
bindsym $mod+r			exec $HOME/.bin/rofi
bindsym $mod+g			exec $HOME/.bin/rofi google 
#bindsym $mod+Shift+f		exec $HOME/.bin/rofi files
#bindsym $mod+Shift+w		exec $HOME/.bin/rofi window
#bindsym $mod+Shift+s		exec $HOME/.bin/rofi ssh

bindsym $mod+f			fullscreen
#bindsym $mod+h			split h
bindsym $mod+s			split v
bindsym $mod+Shift+s		split h

# floating
bindsym $mod+t			focus mode_toggle
bindsym $mod+Shift+t		floating toggle

# scratchpad controls
bindsym $mod+Shift+p		move scratchpad
bindsym $mod+p			scratchpad show

# remove from scratchpad
bindsym $mod+o			floating enable; floating disable


bindsym $mod+b 			mode "resize"
bindsym $mod+m			mode "move" focus floating

# change focus
bindsym $mod+h			focus left
bindsym $mod+j			focus down
bindsym $mod+k			focus up
bindsym $mod+l			focus right

# move focused window
bindsym $mod+Shift+h		move left
bindsym $mod+Shift+j		move down
bindsym $mod+Shift+k		move up
bindsym $mod+Shift+l		move right

# volume control
bindcode 121 exec amixer -D pulse sset Master toggle
bindcode 122 exec amixer -D pulse sset Master 1%-
bindcode 123 exec amixer -D pulse sset Master 1%+

# enable volume controls when mod is pressed
bindcode $mod+121 exec amixer -D pulse sset Master toggle
bindcode $mod+122 exec amixer -D pulse sset Master 1%-
bindcode $mod+123 exec amixer -D pulse sset Master 1%+

# screen brightness
bindcode 232 exec xbacklight -dec 10
bindcode 233 exec xbacklight -inc 10
bindcode $mod+232 exec xbacklight -dec 10
bindcode $mod+233 exec xbacklight -inc 10

# saving printscreens in ~/media/pictures/screenshots
bindcode 107 exec scrot $HOME/media/pictures/screenshots/%Y-%m-%d-%T.png
bindcode $mod+107 exec scrot $HOME/media/pictures/screenshots/%Y-%m-%d-%T.png

# switching workspace
bindsym $mod+1			workspace $workspace1
bindsym $mod+2			workspace $workspace2
bindsym $mod+3			workspace $workspace3
bindsym $mod+4			workspace $workspace4
bindsym $mod+5			workspace $workspace5

# move containers between workspaces
bindsym $mod+Shift+1		move container to workspace $workspace1
bindsym $mod+Shift+2		move container to workspace $workspace2
bindsym $mod+Shift+3		move container to workspace $workspace3
bindsym $mod+Shift+4		move container to workspace $workspace4
bindsym $mod+Shift+5		move container to workspace $workspace5

# move floating windows with keys
mode "move" {
	bindsym h			move left
	bindsym j			move down
	bindsym k			move up
	bindsym l			move right
	#bindsym odiaeresis		move right

	# use Return/Escape to go back to normal
	bindsym Return			mode "default"
	bindsym Escape			mode "default"
}

# resize window
mode "resize" {
	bindsym h			resize shrink	width	10 px or 10 ppt
	bindsym j			resize shrink	height	10 px or 10 ppt
	bindsym k			resize grow	height	10 px or 10 ppt
	bindsym l			resize grow	width	10 px or 10 ppt
	#bindsym odiaeresis		resize grow	width	10 px or 10 ppt

	# use Return/Escape to go back to normal
	bindsym Return			mode "default"
	bindsym Escape			mode "default"
}
